{
    "device": {
        "id": "PI1",
        "name": "pi1-livingroom",
        "location": "living room"
    },

    "mqtt": {
        "broker": "localhost",
        "port": 1883,
        "username": "",
        "password": "",
        "qos": 1,
        "base_topic": "home",
        "sensor_topic_pattern": "sensors/{device_id}/{sensor_type}",
        "actuator_topic_pattern": "actuators/{device_id}/{actuator_type}",
        "batch_topic_pattern": "sensors/{device_id}/batch",
        "per_sensor_topics": {
            "DS1": "sensors/{device_id}/ds1",
            "DL": "sensors/{device_id}/dl",
            "DUS1": "sensors/{device_id}/dus1",
            "DB": "sensors/{device_id}/db",
            "DPIR1": "sensors/{device_id}/dpir1",
            "DMS": "sensors/{device_id}/dms"
        }
    },

    "batch": {
        "enabled": true,
        "mode": "per_sensor",            
        "batch_size": 10,
        "max_interval_seconds": 5
    },

    "server": {
        "influx": {
            "url": "http://influxdb:8086",
            "token": "influx-token",
            "org": "ftn",
            "bucket": "sensors",
            "actuator_bucket": "actuators"
        },
        "subscribe_topics": ["sensors/#", "actuators/#"],
        "listen_host": "0.0.0.0",
        "listen_port": 5000
    },

    "security": {
        "pin": "1234",
        "arming_delay_seconds": 10,
        "entry_delay_seconds": 10,
        "door_open_seconds": 5,
        "pir_led_seconds": 10,
        "dus1_window_seconds": 5,
        "dus1_trend_delta_cm": 10.0
    },

    "DS1": { "simulated": true, "pin": 5, "delay": 10.0 },
    "DL":  { "simulated": true, "pin": 6 },
    "DUS1": { "simulated": true, "trig": 23, "echo": 24, "delay": 10.0 },
    "DB":  { "simulated": true, "pin": 12 },
    "DPIR1": { "simulated": true, "pin": 16, "delay": 10.0 },
    "DMS": { "simulated": true, "pin": 18, "delay": 10.0 }
}
