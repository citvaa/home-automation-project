# Copy this file to .env and edit values for your environment

# MQTT broker
MQTT_BROKER=localhost
MQTT_PORT=1883

# InfluxDB initial setup (used by docker-compose when creating a fresh volume)
INFLUXDB_INIT_MODE=setup
INFLUXDB_INIT_USERNAME=admin
INFLUXDB_INIT_PASSWORD=adminpass
INFLUXDB_INIT_ORG=ftn
INFLUXDB_INIT_BUCKET=sensors
INFLUXDB_INIT_ADMIN_TOKEN=influx-token

# Influx values used by app (can be same as init values)
INFLUX_TOKEN=
INFLUX_ORG=ftn
INFLUX_BUCKET=sensors
INFLUX_URL=http://influxdb:8086

# Grafana initial admin password (optional)
GF_SECURITY_ADMIN_PASSWORD=admin

# Device identity (overrides settings.json values if you want per-container device ids)
DEVICE_ID=PI1
DEVICE_NAME=pi1-livingroom
